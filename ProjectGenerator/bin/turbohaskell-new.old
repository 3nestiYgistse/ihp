#!/usr/bin/env php
<?php
exit;
$basePath = realpath(__DIR__ . "/../../../TurboHaskell");

if ($argc < 2) {
    echo "Usage: new PROJECT_NAME\n";
    exit(1);
}

$projectName = $argv[1];
$boilerplatePath = "$basePath/ProjectGenerator/boilerplate";


system("cp -r $boilerplatePath $projectName");
chdir($projectName);
system("cp -r $basePath TurboHaskell");
chdir("src/Apps/Web");
system("ln -s ../../TurboHaskell/gen gen");
system("ln -s ../../TurboHaskell/del del");
chdir("../../../");
system("make .envrc");
echo "Project created, happy coding :)\n";
