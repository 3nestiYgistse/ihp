#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

# Ensure we are in an app dir
if [ ! -f App.hs ]; then
    echo "You have to be in a app dir (e.g. src/Apps/Web) to run the generator"
	exit 1
fi

FRAMEWORKDIR=$(dirname $(readlink $(which RunDevServer)))/../

# Switch to project root
cd ../../../
ghci -threaded -isrc -fexternal-interpreter -fomit-interface-pragmas +RTS -A128m -RTS -ghci-script <(echo ":script src/TurboHaskell/applicationGhciConfig"; echo "import TurboHaskell.ControllerGenerator";  echo ":l src/Model/Schema.hs"; echo "main' database [\"$@\"]"; echo ":quit")
