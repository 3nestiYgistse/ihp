#!/bin/bash -e
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

# Ensure we are in an app dir
if [ ! -f Main.hs ]; then
    echo "You have to be in a project directory to run the generator"
	exit 1
fi

FRAMEWORKDIR=$(dirname $(readlink $(which RunDevServer)))/../
if [ -d TurboHaskell ]; then
	FRAMEWORKDIR="$(pwd)/TurboHaskell"
fi

GHCI_SCRIPT="$(mktemp)"
trap "rm $GHCI_SCRIPT" EXIT

echo ":script $FRAMEWORKDIR/TurboHaskell/IDE/applicationGhciConfig" > "$GHCI_SCRIPT"

if [ -d TurboHaskell ]; then
	echo ":l TurboHaskell/TurboHaskell/ControllerGenerator.hs" >> "$GHCI_SCRIPT"
else
	echo "import TurboHaskell.ControllerGenerator" >> "$GHCI_SCRIPT"
	echo ":l Application/Schema.hs" >> "$GHCI_SCRIPT"
fi

echo "TurboHaskell.ControllerGenerator.main' Application.Schema.database [\"$@\"]" >> "$GHCI_SCRIPT"
echo ":quit" >> "$GHCI_SCRIPT"

ghci -threaded -fomit-interface-pragmas +RTS -A128m -RTS < "$GHCI_SCRIPT"

